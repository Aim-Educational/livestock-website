@model Website.Models.SignupViewModel
@{
    ViewData["Title"] = "Signup";
}

<h1>Signup</h1>

<form id="signup" method="post" asp-controller="Account" asp-action="Signup" autocomplete="off">
    <h3>Login Info</h3>
    <hr />
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" placeholder="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <input asp-for="PasswordConfirm" class="form-control" />
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>

    <h3>Account Info</h3>
    <hr />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" placeholder="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" placeholder="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" placeholder="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="ToSConsent" type="checkbox" class="form-check-input" />
        <label asp-for="ToSConsent" class="form-check-label">
            I have read and accept the terms under the <a href="#">Terms of Service</a> agreement.
        </label>
    </div>
    <div class="form-check">
        <input asp-for="PrivacyConsent" type="checkbox" class="form-check-input" />
        <label asp-for="PrivacyConsent" class="form-check-label">
            I have read and accept the terms under the <a href="#">Privacy Statement</a>.
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Create Account</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}