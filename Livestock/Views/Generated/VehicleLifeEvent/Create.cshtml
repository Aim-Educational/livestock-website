@model Database.Models.VehicleLifeEvent

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>@Html.DisplayNameFor(model => model.VehicleLifeEventId)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

																<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
																<div class="form-group">
						<label asp-for="EnumVehicleLifeEventTypeId" class="control-label"></label>
						<select asp-for="EnumVehicleLifeEventTypeId" class ="form-control" asp-items="ViewBag.EnumVehicleLifeEventTypeId"></select>
					</div>
																<div class="form-group">
						<label asp-for="VehicleTrailerMapId" class="control-label"></label>
