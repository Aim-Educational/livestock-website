@model Database.Models.Tag

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>@Html.DisplayNameFor(model => model.TagId)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="ui form"asp-action="Create">
																<div class="field">
						<label asp-for="CritterId" class="control-label"></label>
						<select asp-for="CritterId" class ="form-control" asp-items="ViewBag.CritterId"></select>
					</div>
																<div class="field">
						<label asp-for="Comment" class="control-label"></label>
						<input asp-for="Comment"/>
						<span asp-validation-for="Comment" class="ui red text"></span>
					</div>
																<div class="field date" id="DateTime" data-target-input="nearest">
						<label asp-for="DateTime" class="control-label"></label>
						<div class="form-inline">
							<input id="DateTime" type="text" name="DateTime" class="form-control datetimepicker-input" data-target="#DateTime"
								   value="@(Model?.DateTime.ToString("G") ?? "")"/>
							<div class="input-group-append" data-target="#DateTime" data-toggle="datetimepicker">
								<div class="input-group-text"><i class="fa fa-calendar"></i></div>
							</div>
						</div>
					</div>
																<div class="field">
						<label asp-for="Rfid" class="control-label"></label>
						<input asp-for="Rfid"/>
						<span asp-validation-for="Rfid" class="ui red text"></span>
					</div>
																<div class="field">
						<label asp-for="Tag1" class="control-label"></label>
						<input asp-for="Tag1"/>
						<span asp-validation-for="Tag1" class="ui red text"></span>
					</div>
																				<div class="field">
						<label asp-for="UserId" class="control-label"></label>
						<input asp-for="UserId"/>
						<span asp-validation-for="UserId" class="ui red text"></span>
					</div>
											            <div class="field">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
			
            <div asp-validation-summary="All" class="ui red text"></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

			<script type="text/javascript">
			$(function () {
				$('#DateTime').datetimepicker();
			});
		</script>
	}
