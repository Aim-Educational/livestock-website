@model Database.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>@Html.DisplayNameFor(model => model.ProductId)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="ui form"asp-action="Edit">
												@Html.HiddenFor(model => model.ProductId)
																<div class="field">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description"/>
						<span asp-validation-for="Description" class="ui red text"></span>
					</div>
																<div class="field">
						<label asp-for="EnumProductTypeId" class="control-label"></label>
						<select asp-for="EnumProductTypeId" class ="form-control" asp-items="ViewBag.EnumProductTypeId"></select>
					</div>
																<div class="field">
						<label asp-for="Comment" class="control-label"></label>
						<input asp-for="Comment"/>
						<span asp-validation-for="Comment" class="ui red text"></span>
					</div>
																<div class="field">
						<label asp-for="DefaultVolume" class="control-label"></label>
						<input asp-for="DefaultVolume"/>
						<span asp-validation-for="DefaultVolume" class="ui red text"></span>
					</div>
																<div class="field">
						<label asp-for="RequiresRefridgeration" class="control-label"></label>
						<input asp-for="RequiresRefridgeration"/>
						<span asp-validation-for="RequiresRefridgeration" class="ui red text"></span>
					</div>
																@Html.HiddenFor(model => model.Timestamp)
																@Html.HiddenFor(model => model.VersionNumber)
							            <div class="field">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
			
            <div asp-validation-summary="All" class="ui red text"></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

	}
