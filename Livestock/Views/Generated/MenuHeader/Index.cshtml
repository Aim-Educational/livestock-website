
@model IEnumerable<Database.Models.MenuHeader>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
							<th> @Html.DisplayNameFor(model => model.Name) </th>
							<th> @Html.DisplayNameFor(model => model.MenuHeaderParentId) </th>
							<th> @Html.DisplayNameFor(model => model.RoleId) </th>
							<th> @Html.DisplayNameFor(model => model.ApplicationCode) </th>
							<th> @Html.DisplayNameFor(model => model.Comment) </th>
