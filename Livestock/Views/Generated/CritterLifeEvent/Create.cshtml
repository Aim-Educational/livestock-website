@model Database.Models.CritterLifeEvent

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>@Html.DisplayNameFor(model => model.CritterLifeEventId)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
																<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
																<div class="form-group">
						<label asp-for="CritterId" class="control-label"></label>
						<select asp-for="CritterId" class ="form-control" asp-items="ViewBag.CritterId"></select>
					</div>
																<div class="form-group">
						<label asp-for="EnumCritterLifeEventTypeId" class="control-label"></label>
						<select asp-for="EnumCritterLifeEventTypeId" class ="form-control" asp-items="ViewBag.EnumCritterLifeEventTypeId"></select>
					</div>
																<div class="form-group">
						<label asp-for="Comment" class="control-label"></label>
						<input asp-for="Comment" class="form-control" />
						<span asp-validation-for="Comment" class="text-danger"></span>
					</div>
																<div class="form-group date" id="DateTime" data-target-input="nearest">
						<label asp-for="DateTime" class="control-label"></label>
						<div class="form-inline">
							<input id="DateTime" type="text" name="DateTime" class="form-control datetimepicker-input" data-target="#DateTime"
								   value="@(Model?.DateTime.ToString("G") ?? "")"/>
							<div class="input-group-append" data-target="#DateTime" data-toggle="datetimepicker">
								<div class="input-group-text"><i class="fa fa-calendar"></i></div>
							</div>
						</div>
					</div>
																<div class="form-group">
						<label asp-for="EnumCritterLifeEventDataId" class="control-label"></label>
						<input asp-for="EnumCritterLifeEventDataId" class="form-control" />
						<span asp-validation-for="EnumCritterLifeEventDataId" class="text-danger"></span>
					</div>
															            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
			
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

			<script type="text/javascript">
			$(function () {
				$('#DateTime').datetimepicker();
			});
		</script>
	}
