@using System.Security.Claims;
<nav class="navbar navbar-dark navbar-expand-lg bg-dark fixed-top">
    <a class="navbar-brand offset-xl-2" href="/">Livestock</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="AllActions">Controllers</a></li>
        </ul>
        <ul class="navbar-nav">
            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item"><a class="btn btn-outline-success" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
            }
            else
            {
                <li class="nav-item navbar-text">
                    Welcome <strong>@(User.FindFirst(ClaimTypes.Name)?.Value ?? "NO NAME FOUND")</strong> (@User.FindFirst(ClaimTypes.NameIdentifier).Value)
                </li>
                <li class="pl-4 nav-item"><a class="btn btn-outline-warning" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
            }
        </ul>
    </div>
</nav>