                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VersionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CritterType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DadCritter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MumCritter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MumFurther)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DadFurther)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerContactId)
