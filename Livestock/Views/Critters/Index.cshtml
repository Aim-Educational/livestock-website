                @Html.DisplayFor(modelItem => item.BreedId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VersionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CritterType.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DadCritter.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MumCritter.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CritterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CritterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CritterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
