@model Website.Models.GroupCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create new @Model.GroupType group</h1>
<hr />

<form id="createForm" asp-action="Create" method="post">
    <div class="form-group">
        <label class="control-label" asp-for="Group.Name"></label>
        <input class="form-control" asp-for="Group.Name" />
        <span class="text-danger" asp-validation-for="Group.Name"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Group.Description"></label>
        <input class="form-control" asp-for="Group.Description" />
        <span class="text-danger" asp-validation-for="Group.Description"></span>
    </div>

    @if (Model.GroupType == "critter")
    {
        <aim-multi-select asp-for="SelectedGroupIds" descriptions="@ViewBag.GroupDescriptions" form-id="createForm" type="Critter" label="Critters"></aim-multi-select>
        <input asp-for="Group.GroupType" type="hidden" value="@AdmuGroupEntityTypes.Critter" />
    }
    else if (Model.GroupType == "user")
    {
        <aim-multi-select asp-for="SelectedGroupIds" descriptions="@ViewBag.GroupDescriptions" form-id="createForm" type="User" label="Users"></aim-multi-select>
        <input asp-for="Group.GroupType" type="hidden" value="@AdmuGroupEntityTypes.User" />
    }
    
    <input asp-for="Group.Timestamp" type="hidden" value="AAAAAAAAH0U=" />
    <input asp-for="GroupType" type="hidden" />
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create @Model.GroupType</button>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>