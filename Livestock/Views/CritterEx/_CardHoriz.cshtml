@model IList<Database.Models.Critter>

<div class="ui stackable three column grid">
    @foreach (var item in Model)
    {
        <div class="column bottom one padded">
            <div class="ui fluid card">
                <img class="image lazy" data-src="/CritterEx/Image?critterId=@item.CritterId&cacheVersion=@item.VersionNumber&width=348&height=464" />
                <div class="content">
                    <div>
                        <div>
                            <partial name="_CritterIcons" model="item" />
                        </div>
                        <div class="header"><span class="badge badge-secondary">[@item.TagNumber]</span> @item.Name</div>
                    </div>
                    <div class="meta">
                        @(item.Gender == "M" ? "Male"
                                             : item.Gender == "F" ? "Female"
                                                                  : item.Gender)
                        @item.CritterType.Name - @item.Breed.Description
                    </div>

                    <div class="ui inverted divider"></div>
                    <div class="extra content">
                        <partial name="_CritterLinks" model="item" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
