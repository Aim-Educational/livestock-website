
@model IEnumerable<Database.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
							<th> @Html.DisplayNameFor(model => model.Name) </th>
							<th> @Html.DisplayNameFor(model => model.Address) </th>
							<th> @Html.DisplayNameFor(model => model.Comment) </th>
							<th> @Html.DisplayNameFor(model => model.EmailAddress) </th>
							<th> @Html.DisplayNameFor(model => model.IsCustomer) </th>
							<th> @Html.DisplayNameFor(model => model.IsSupplier) </th>
							<th> @Html.DisplayNameFor(model => model.PhoneNumber1) </th>
							<th> @Html.DisplayNameFor(model => model.PhoneNumber2) </th>
							<th> @Html.DisplayNameFor(model => model.PhoneNumber3) </th>
							<th> @Html.DisplayNameFor(model => model.PhoneNumber4) </th>
			            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
							<td> @Html.DisplayFor(modelItem => item.Name) </td>
            				<td> @Html.DisplayFor(modelItem => item.Address) </td>
            				<td> @Html.DisplayFor(modelItem => item.Comment) </td>
            				<td> @Html.DisplayFor(modelItem => item.EmailAddress) </td>
            				<td> @Html.DisplayFor(modelItem => item.IsCustomer) </td>
            				<td> @Html.DisplayFor(modelItem => item.IsSupplier) </td>
            				<td> @Html.DisplayFor(modelItem => item.PhoneNumber1) </td>
            				<td> @Html.DisplayFor(modelItem => item.PhoneNumber2) </td>
            				<td> @Html.DisplayFor(modelItem => item.PhoneNumber3) </td>
            				<td> @Html.DisplayFor(modelItem => item.PhoneNumber4) </td>
                        <td>
                <a asp-action="Edit" asp-route-id="@item.ContactId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContactId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContactId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
